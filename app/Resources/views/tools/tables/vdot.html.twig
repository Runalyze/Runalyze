{% extends 'tools/tables/base.html.twig' %}

{% set activeTable = 1 %}

{% block table %}
    <table class="zebra-style c" style="width: 700px;">
        <thead>
            <tr>
                <th>VDOT</th>
                {% for km in distances %}
                    <th>{{ km|raw }}</th>
                {% endfor %}
            </tr>
        </thead>
        <tbody>
            {% for vdot in vdots %}
                <tr{% if vdot.value == currentVdot|round %} class="highlight"{% endif %}>
                    <td class="b">{{ vdot.value }}</td>
                    {% for time in vdot.results %}
                        <td>{{ time|raw }}</td>
                    {% endfor %}
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <p class="info">
        {% trans %}
            This table is computed by some formulas, derived from the tables in Jack Daniels' Running formula.
            These values do not fit the original table one hundred percent.
        {% endtrans %}
    </p>

    <p class="info">
        {% trans %}
            This table does <strong>not</strong> use a correction based on your current basic endurance.
        {% endtrans %}
    </p>
{% endblock %}
